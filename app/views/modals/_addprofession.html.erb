<div class="modal-body" id="professionModalBody">
<%= select_tag :professiongroup, options_for_select(@availablegroups) %>
  <%= bootstrap_form_with(id: 'profForm', model: @characterprofession, url: character_learnprofession_path) do |f| %>
    <%= f.select :profession_id, grouped_options_for_select(@availableprofessions), hide_label: true %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>
</div>