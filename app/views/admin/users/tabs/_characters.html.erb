<%= link_to 'Add a Character', new_admin_character_path(:user_id => @user.id), class: "btn btn-success btn-sm my-2" %>
<table class="table table-hover table-bordered table-sm">
 <thead class="thead-dark">
<tr>
    <th>Name</th>
    <th>Level</th>
    <th>Class</th>
    <th>Race</th>
    <th>Deity</th>
    <th>Status</th>
</tr>
</thead>
<% @user.characters.each do |character| %>
    <tr class="table-light">
      <td><%= link_to character.name, admin_character_path(id: character.id) %></td>
      <td><%= character.level %></td>
      <td><%= character.characterclass.name %></td>
      <td><%= character.race.name %></td>
      <td><%= if(character.deity) then character.deity.name end%></td>
      <td><%= character.status %></td>
    </tr>
  <% end %>
  </table>