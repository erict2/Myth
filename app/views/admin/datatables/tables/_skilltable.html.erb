<table class="table table-hover table-bordered table-sm">
<thead class="thead-dark">
<tr>
    <th>Name</th>
    <th>Tier</th>
    <th>Skill Group</th>
    <th>Rest Type</th>
    <th>Delivery</th>
    <th>Description</th>
    <th>Player Available</th>
</tr>
</thead>
<% @skill.all.each do |datarow| %>
<tr class="table-light">
    <td><%= datarow.name %></td>
    <td><%= datarow.tier %></td>
    <td><%= datarow.skillgroup.name %></td>
    <td><%= datarow.resttype.name %></td>
    <td><%= if(datarow.skilldelivery_id) then datarow.skilldelivery.name end %></td>
    <td><%= datarow.description %></td>
    <td><%= datarow.playeravailable %></td>
</tr>
<% end %>
</table>
