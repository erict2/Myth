<%= link_to image_tag("logo_small.png", id: "navbar-logo", :size => '40x40'), root_path, :class => "navbar-brand" %>
<div class="container-fluid">
  <div class="navbar-collapse">
    
    <div class="navbar-nav">
    </div>
  

    <div class="navbar-nav ml-auto">
      <% if current_user  %>
        <% if current_user.usertype == 'Admin' %>
          <div class='nav-item dropdown'>
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Admin</a>
            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to 'Users', admin_users_path, :class => 'dropdown-item' %>
              <%= link_to 'Events', admin_events_path, :class => 'dropdown-item' %>
              <%= link_to 'Game Data', admin_datatables_path, :class => 'dropdown-item' %>
              <%= link_to 'Game Settings', admin_settings_path, :class => 'dropdown-item' %>
            </div>
          </div>
        <% end %>
      <% end %>
      <% if user_signed_in? %>
        <div class='nav-item dropdown'>
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Profile</a>
          <div class="dropdown-menu dropdown-menu-right">
            <% if (current_user.characters.count == 0) %>
              <%= link_to 'Create Character', new_character_path, :class => 'dropdown-item' %>
            <% else %>
              <%= link_to "Change Character", "#changeCharacterModal", :class => 'dropdown-item', "data-toggle" => "modal", 'data-target' => '#changeCharacterModal' %>
            <% end %>
            <%= link_to 'EXP Log', player_explog_path, :class => 'dropdown-item' %>
            <%= link_to 'Events', player_events_path, :class => 'dropdown-item' %>
            <div class="dropdown-divider"></div>
            <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'dropdown-item' %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'dropdown-item' %>
          </div>
        </div>
      <% else %>
        <%= link_to 'Login', new_user_session_path, :class => "nav-link" %>
      <% end %>

    </div>

  </div>
</div>



